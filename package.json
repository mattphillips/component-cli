{
  "name": "component-cli",
  "version": "0.0.1",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src -d lib --ignore \"**/*.test*js\"",
    "precommit": "lint-staged",
    "prettier": "prettier 'src/**/*.js' --write --single-quote=true --print-width=120",
    "postinstall": "yarn build",
    "start": "node lib/index.js",
    "test": "jest --testPathPattern='src' --testRegex='\\.test\\.js$'",
    "test:coverage": "yarn test -- --coverage",
    "test:watch": "yarn test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattphillips/component-cli.git"
  },
  "keywords": [],
  "author": "Matt Phillips (mattphillips)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattphillips/component-cli/issues"
  },
  "homepage": "https://github.com/mattphillips/component-cli#readme",
  "dependencies": {
    "fs-extra": "^3.0.1",
    "inquirer": "^3.2.0",
    "inquirer-select-directory": "^1.1.2",
    "node-dir": "^0.1.17",
    "parse-gitignore": "^0.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "eslint": "^4.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^20.0.3",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.1",
    "prettier": "^1.5.2"
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "git add"
    ]
  },
  "babel": {
    "plugins": [
      "babel-plugin-transform-es2015-modules-commonjs",
      "transform-object-rest-spread"
    ]
  }
}
